pipeline{
  agent { label 'maven' }
  stages{
    stage ('checkout'){
      steps{
        checkout scm
      }
  }
    stage ('Unit test') {
      steps{
        echo 'unit test completed.'
      }
    }
    
   stage ('Static Analysis') {       
     steps{      
       echo 'Static analysis completed.'
    }
  }
    stage ('build') {
      steps{
      sh "mvn clean package -DskipTests"       
      }
    }
    stage ('build image') {
      steps{
      sh '''
          oc start-build demo-build --from-dir=. --follow
        '''
      }
    }    
   
    stage ('Integration test') {       
     steps{      
       echo 'integration test completed.'
    }
  }
    
    
  }
}
